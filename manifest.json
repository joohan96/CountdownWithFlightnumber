{
  "name": "LongdistanceIsHard",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LongdistanceIsHard"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://*/",
    "http://*/"
  ]
}